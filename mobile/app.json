{
  "expo": {
    "name": "CLAW",
    "slug": "claw-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.claw.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CLAW uses your location to remind you of intentions when you're in the right place.",
        "NSMicrophoneUsageDescription": "CLAW uses your microphone for voice capture of intentions.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.claw.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "RECORD_AUDIO",
        "FOREGROUND_SERVICE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF6B35",
          "sounds": [
            "./assets/notification_sound.wav"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CLAW uses your location to remind you of intentions when you're in the right place."
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "CLAW uses your microphone to capture voice intentions.",
          "speechRecognitionPermission": "CLAW uses speech recognition to convert your voice to text (works offline using your phone's engine)."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "73bf8fd3-f59b-4544-a97d-e22b17bfb90c"
      }
    },
    "owner": "camelt0e"
  }
}
