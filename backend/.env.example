# CLAW Backend Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/claw

# Redis (for caching and background jobs)
REDIS_URL=redis://localhost:6379/0

# OpenAI (Required for AI categorization)
OPENAI_API_KEY=sk-...

# Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# App Settings
DEBUG=True
DEFAULT_CLAW_EXPIRY_DAYS=7
MAX_FREE_CLAWS=50

# CORS (comma-separated)
ALLOWED_HOSTS=http://localhost:3000,http://localhost:19006,app://*
